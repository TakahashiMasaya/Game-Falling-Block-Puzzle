{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    // TSはECMAScript 6に変換
    "target": "ES6",
    // TSのモジュールはES Modulesとして出力
    "module": "ES2020",
    // JSXの書式を有効に設定
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    },
  }
}
